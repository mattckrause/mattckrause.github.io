{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "status",
          "name": "status",
          "type": "string"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "keywords",
          "name": "keywords",
          "type": "string"
        },
        {
          "title": "preview",
          "name": "Cover",
          "type": "image"
        }
      ]
    }
  ],
  "frontMatter.preview.host": "http://localhost:8000",
  "frontMatter.website.host": "https://mattckrause.github.io",
  "frontMatter.framework.startCommand": "Pelican -r -l",
  "frontMatter.taxonomy.dateFormat": "YYYY-MM-DD H:mm",
  "frontMatter.taxonomy.commaSeparatedFields": [
    "tags",
    "categories",
    "keywords"
  ],
  "frontMatter.content.draftField": {
    "name": "draft",
    "type": "choice",
    "choices": [
      "draft",
      "hidden",
      "published"
    ]
  },
  "frontMatter.taxonomy.modifiedField": "modified",
  "frontMatter.taxonomy.seoDescriptionField": "summary",
  "frontMatter.taxonomy.noPropertyValueQuotes": [
    "tags",
    "categories",
    "modified",
    "date",
    "title"
  ]
}